
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .7
        Rectangle:
            size: self.size
    Label:
        font_name: "RESSOURCES/fonts/Sackers-Gothic-Std-Light.ttf"
        font_size: dp(60)
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        padding: dp(34), dp(18)
        size_hint: None, None
        size: self.texture_size
        font_size: dp(35)
        font_name: "RESSOURCES/fonts/eurostile.ttf"
        text: root.parent.menu_button_title
        pos_hint: {"center_x": .5, "center_y": .3}
        #size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .95
